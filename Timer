    function checkPassword() {
      var password = document.getElementById("passwordInput").value;
      // Controlla se la password Ã¨ corretta
      if (password === "password1") {
        window.location.href = "seconda_pagina.html"; // Reindirizza alla seconda pagina
      } else {
        alert("Password errata. Riprova."); // Mostra un messaggio di errore
      }
    }
